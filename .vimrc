syntax on
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set autoindent
set number
set ruler

set hlsearch
set incsearch
set ignorecase

set encoding=utf-8

set timeoutlen=100
set ttimeoutlen=5

set backspace=indent,eol,start
set showcmd
set wildmenu
set background=dark

:nnoremap <C-l> <End>
:nnoremap <C-h> _

let g:python_highlight_all=1
set path+=**

highlight Comment ctermfg=green
